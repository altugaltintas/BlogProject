@model List<Category>

<div class="text-center">
    
    @if (Model.Count > 0)
    {
        <h5>Takip edilen kategoriler</h5>
        @foreach (var item in Model)
        {
            

            <div>
                <a asp-action="CategoryTop" asp-controller="Article" asp-area="Member" asp-route-id="@item.ID">@item.Name</a>
            </div>
        }
        
    }
    else
    {
        <div>
        <h5>Takip edilen kategori yok</h5>
            <h6>Kategorileri ineclemek için<a asp-action="MemList" asp-controller="Category" asp-area="Member">Tıklayınız</a></h6>
                </div>
    }
</div>

