@model List<Category>

<div class="text-center">
    <h2>TAKİP EDİLEN KATEGORİLER</h2>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {
            <a asp-action="FilterWithCategory" asp-controller="Article" asp-area="Member" asp-route-id="@item.ID">@item.Name</a>
        }
        
    }
    else
    {
        <h1>Takip edilen kategori yok</h1>
        <h1>Kategorileri ineclemek için<a asp-action="List" asp-controller="Category" asp-area="Member">Tıklayınız</a></h1>
    }
</div>