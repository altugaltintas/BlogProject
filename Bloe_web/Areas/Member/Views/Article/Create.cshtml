@model ArticleCreateVM





<div class="row">

    <div class="card col-md-10 offset-1">
        <div class="card-body">
            <div class="card-text col-md-12 bg-info text-white text-center   py-2 ">
                <h2> Makale Oluşturma Paneli</h2>
            </div>
            <div class="card-text">MAKALE OLUŞTURMA PANELİ</div>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" type="text" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea rows="20" cols="30" asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                @foreach (var category in Model.Categories)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SelectedCategoryIDs" value="@category.ID" id="category-@category.ID" />
                        <label for="category-@category.ID">@category.Name</label>
                    </div>
                }






                <div class="form-group">
                    <input asp-for="AppUserID" type="hidden" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Oluştur" />
                </div>
            </form>
        </div>



    </div>
</div>

