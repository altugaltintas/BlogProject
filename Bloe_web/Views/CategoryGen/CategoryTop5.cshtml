@model List<GetArticleVM>


<br />
<div class="container">
    <div class="card-body bg-info text-white text-center py-2">
        <h2>Makaleler</h2>
    </div>
    <br />

    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card" style="max-width: 540px;">
                    <div class="row no-gutters">

                        <div class="col-md-4 ">
                            <img src="@article.ImagePath" class="card-img" alt="..." />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@article.Title</h5>
                                <p class="card-text">
                                    @article.Content.Substring(0,150)<a asp-action="Detail" asp-controller="Article" asp-route-id="@article.ArticleID" asp-area="">
                                        devamı için tıklayınız..
                                    </a>
                                </p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Oluşturulma Tarihi: @article.CreatedDate.ToString("dd.MM.yyyy")</small>
                                <br>
                                <small class="text-muted">Yazar: <a asp-action="UserDetail" asp-controller="Users" asp-route-id="@article.AppUserID">@article.UserFullName</a> </small>
                                <br>
                                <small class="text-muted">
                                    Kategori: @foreach (var categoryName in article.CategoryName)
                                    {
                                        <span>@categoryName</span>
                                    }
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
